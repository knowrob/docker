#!/bin/bash
CONTAINERS="dockerbridge nginx docker-gen mongo_db postgres_db `docker ps | grep knowrob/${OPENEASE_DOCKER_ROS_DISTRO}-knowrob-daemon:latest | awk '{print $1}'` `docker ps | grep openease/knowrob:latest | awk '{print $1}'` `docker ps | grep openease/easeapp:latest | awk '{print $1}'`"
docker stop -t 3 $CONTAINERS
if [ "$1" == "--rm" ]; then
	docker rm $CONTAINERS
fi
